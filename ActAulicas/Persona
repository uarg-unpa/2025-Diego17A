
// clase
public class Persona {

    String nombre;
    String apellido;
    Int edad;
    int dni;

    public Persona (String nombre, String apellido, int edad, int dni)
    {
        this.nombre=nombre;
        this.apellido=apellido;
        this.edad=edad;
        this.dni=dni; 
    }
    //metodos gets y sets 
    public String getNombre(){
        // return nombre; (otra forma)  
        return this.nombre 
    }
    public void setNombre(String nombre){
        this.nombre=nombre    
    // faltan los demas get y set de los otros atributos     
    }
    public boolean mayordeedad (){
        if (edad >=18)
            return true
        else
            return false    
            
    }    
}